+        {
+            this.eventType = eventType;
+        }
+
+        /**
+         * Stop.
+         */
+        void stop()
+        {
+            this.run = false;
+        }
+
+        @Override
+        public void run()
+        {
+            CacheEntryEvent<Object> event;
+
+            while (this.run) {
