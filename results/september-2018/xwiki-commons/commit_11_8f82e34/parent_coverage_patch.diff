+    @Override
+    public void cacheEntryAdded(CacheEntryEvent<Object> event)
+    {
+        this.addedEvent = event;
+    }
+
+    @Override
+    public void cacheEntryModified(CacheEntryEvent<Object> event)
+    {
+        this.modifiedEvent = event;
+    }
+
+    @Override
